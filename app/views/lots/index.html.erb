<h1>Listing lots</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Capacity</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lots.each do |lot| %>
  <tr>
    <td><%= lot.name %></td>
    <td><%= lot.address %></td>
    <td><%= lot.capacity %></td>
    <td><%= lot.price %></td>
    <td><%= link_to 'Show', lot %></td>
    <td><%= link_to 'Edit', edit_lot_path(lot) %></td>
    <td><%= link_to 'Destroy', lot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

